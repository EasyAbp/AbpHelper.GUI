{
  "name": "abphelper-gui",
  "productName": "AbpHelper",
  "version": "0.6.0",
  "description": "AbpHelper is a tool that helps you with developing Abp vNext applications.",
  "main": "main.js",
  "bin": "cli.js",
  "build": {
    "appId": "org.easyabp.abphelper",
    "productName": "AbpHelper",
    "copyright": "Copyright Â© 2020 EasyAbp",
    "icon": "assets/app-icon/win/app.ico",
    "asar": true,
    "win": {
      "target": [
        {
          "target": "nsis"
        }
      ]
    },
    "mac": {
      "icon": "assets/app-icon/mac/app.icns",
      "category": "public.app-category.developer-tools",
      "target": [
        {
          "target": "dmg"
        }
      ]
    },
    "linux": {
      "target": [
        {
          "target": "AppImage"
        }
      ]
    },
    "publish": {
      "provider": "github",
      "publishAutoUpdate": false
    }
  },
  "scripts": {
    "start": "electron .",
    "dev": "electron . --debug",
    "test": "mocha && standard",
    "package": "electron-builder",
    "prepack": "check-for-leaks",
    "prepush": "check-for-leaks"
  },
  "repository": "https://github.com/EasyAbp/AbpHelper.GUI",
  "keywords": [
    "EasyAbp",
    "Abp",
    "Helper"
  ],
  "author": "EasyAbp",
  "license": "Apache 2.0",
  "devDependencies": {
    "@octokit/rest": "^18.0.0",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "check-for-leaks": "^1.2.1",
    "devtron": "^1.4.0",
    "electron": "^9.3.0",
    "electron-builder": "^22.7.0",
    "husky": "^4.2.5",
    "mocha": "^8.0.1",
    "npm-run-all": "^4.1.5",
    "request": "^2.88.2",
    "rimraf": "^3.0.2",
    "signcode": "^1.0.0",
    "spectron": "^11.0.0",
    "standard": "^14.3.4"
  },
  "dependencies": {
    "electron-log": "^4.2.1",
    "electron-main-fetch": "^1.0.0",
    "electron-settings": "^4.0.0",
    "electron-shortcut-normalizer": "^1.0.0",
    "fix-path": "^3.0.0",
    "glob": "^7.1.6",
    "highlight.js": "^10.1.0",
    "update-electron-app": "^1.5.0"
  },
  "standard": {
    "env": {
      "mocha": true
    }
  }
}
